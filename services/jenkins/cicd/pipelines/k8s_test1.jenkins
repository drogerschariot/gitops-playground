#!/usr/bin/env groovy

def label = "k8sagent-e2e"
def home = "/home/jenkins"
def workspace = "${home}/workspace/build-jenkins-operator"
def workdir = "${workspace}/src/github.com/jenkinsci/kubernetes-operator/"

podTemplate(
    label: label,
    containers: [
        containerTemplate(
            name: 'build-npm', 
            image: 'alpine:3.11', 
            ttyEnabled: true, 
            command: 'sleep',
            resourcelimitcpu: "500m",
            resourcelimitmemory: "500Mi",
            resourcerequestcpu: "250m",
            resourcerequestmemory: "250Mi"
        )
    ],
    )
{
    node(label) {
        stage('Install Build Deps') {
            container('build-npm') {
                sh 'apk add --update nodejs npm git'
            }
        }
        stage('clone demo repo') {
            container('build-npm') {
                sh 'git clone https://github.com/shayki5/npm-demo.git'
            }
        }
        stage('install NPM Deps') {
            container('build-npm') {
                sh """
                cd npm-demo
                npm install
                """
            }
        }
        stage('Run Tests') {
            container('build-npm') {
                sh """
                cd npm-demo
                npm test
                """
            }
        }
        stage('Build Assets') {
            container('build-npm') {
                sh """
                cd npm-demo
                npm run build
                """
            }
        }
        stage('Push Assets') {
            container('build-npm') {
                sh """
                cd npm-demo
                echo "Logic to push assets to a destination"
                file nodejs-demoapp.zip
                """
            }
        }
    }
}
